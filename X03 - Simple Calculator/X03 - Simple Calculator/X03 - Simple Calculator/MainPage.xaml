<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X03___Simple_Calculator.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Simple Calculator" />
        <Entry Keyboard="Numeric" x:Name="val1"/>
        <Picker x:Name="opPicker"
                Title="Select an Operation">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Add</x:String>
                    <x:String>Multiply</x:String>
                    <x:String>Subtract</x:String>
                    <x:String>Divide</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="val2" Keyboard="Numeric"/>
        <Button Text="Calculate" x:Name="btnClick" />
        <Label Text="" x:Name="result" />
    </StackLayout>

</ContentPage>
