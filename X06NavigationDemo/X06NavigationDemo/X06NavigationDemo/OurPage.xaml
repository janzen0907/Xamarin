<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X06NavigationDemo.OurPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Move to a different page:"/>
            <Button Text="New Page" x:Name="btnNew"/>
            <Button Text="New Modal Page" x:Name="btnNewModal"/>
            <Button Text="Close Page" x:Name="btnPop"/>
            <Button Text="Close Modal Page" x:Name="btnPopModal"/>
            <Button Text="Go to Root" x:Name="btnPopToRoot"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>